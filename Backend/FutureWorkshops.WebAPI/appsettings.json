{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionString": {
    "FutureWorkshopsConnection": "Server=REHAB; Database= FutureWorkshopsDB; Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "http://localhost,http://localhost:4200",
  "Serilog": {
    "Using": [ "FutureWorkshops.Business" ],
    "WriteTo": [
      {
        "Name": "MapToFile",
        "Args": {
          "_rootPath": "Logs\\",
          "fileSizeLimitBytes": "300000000",
          "rollOnFileSizeLimit": "true",
          "sinkMapCountLimit": "1",
          "flushToDiskInterval": "60",
          "rollingInterval": "3"
        }
      }
    ]
  }
}
